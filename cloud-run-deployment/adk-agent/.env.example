# Google Cloud Configuration
# Set these when deploying to Cloud Run
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Vertex AI Configuration
# Set GOOGLE_GENAI_USE_VERTEXAI=TRUE to use Vertex AI
# Set GOOGLE_GENAI_USE_VERTEXAI=FALSE to use Google AI Studio (requires API key)
GOOGLE_GENAI_USE_VERTEXAI=TRUE

# Google AI Studio API Key (only needed if GOOGLE_GENAI_USE_VERTEXAI=FALSE)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-api-key-here

# Model Configuration
GOOGLE_MODEL=gemini-2.5-flash

# MCP Server URL
# This will be set automatically after deploying the MCP server
# Format: https://mcp-server-xxx-uc.a.run.app/sse (SSE transport)
MCP_SERVER_URL=https://mcp-server-xxx-uc.a.run.app/sse

# Port (set by Cloud Run automatically)
PORT=8080
